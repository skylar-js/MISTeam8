@model IEnumerable<MISTeam8.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Employee Profiles <span class="glyphicon glyphicon-user" span> </span></h2>
<div class="form-horizontal">
    <div class="form-group">
        <div class="colmd-9">
            @using (Html.BeginForm("Index","Users", FormMethod.Get))
            {
            <p>
                Search For Employee  <span class="glyphicon glyphicon-search" span> </span>
                @Html.TextBox("searchString")
                <input type="submit" value="Seach" class="btn btn-primary btn-xs" />
            </p>
            }
        </div>
    </div>
</div>

<p>
    
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email <span class="glyphicon glyphicon-envelope" span> </span>
        </th>
        <th>
            Hire Date <span class="glyphicon glyphicon-calendar" span> </span>
        </th>
        <th>
            Position <span class="glyphicon glyphicon-briefcase" span> </span>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tenure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
