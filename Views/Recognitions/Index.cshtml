@model IEnumerable<MISTeam8.Models.Recognition>

@{
    ViewBag.Title = "Index";
}

<h2>Recognized Employees</h2>

<p>
    @Html.ActionLink("Recognize Someone", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Recepient Name
        </th>
        <th>
          Award
        </th>
        <th>
          Recognizor
        </th>
        <th>
          Date Recognized
        </th>
        <th>
          Details of Recognition
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.award)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognizor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRecongized)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RecognitionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RecognitionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RecognitionID })
        </td>
    </tr>
}

</table>
