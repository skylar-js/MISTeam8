@model IEnumerable<MISTeam8.Models.Recognition>

@{
    ViewBag.Title = "Index";
}

<h2>Give Someone Recognition!</h2>

<p>
    @Html.ActionLink("Click Here to Recognize Someone", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoreValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRecongized)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoreValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRecongized)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RecognitionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RecognitionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RecognitionID })
        </td>
    </tr>
}

</table>
